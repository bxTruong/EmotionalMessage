<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="user"
            type="com.truongbx.emotionalmessage.model.User" />
    </data>

    <LinearLayout
        android:id="@+id/lnContainerItemUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="@dimen/_8sdp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/imgAvatarSmall"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_launcher_background"
                app:riv_corner_radius="@dimen/_50sdp"
                app:riv_oval="true" />

            <androidx.cardview.widget.CardView
                android:id="@+id/imgOnlineItemChat"
                android:layout_width="@dimen/_10sdp"
                android:layout_height="@dimen/_10sdp"
                android:layout_alignEnd="@+id/imgAvatarSmall"
                android:layout_alignBottom="@+id/imgAvatarSmall"
                android:layout_marginEnd="@dimen/_1sdp"
                android:layout_marginBottom="@dimen/_2sdp"
                android:background="@color/white"
                app:cardCornerRadius="@dimen/_12sdp"
                app:cardElevation="0dp">

                <ImageView
                    android:layout_width="@dimen/_8sdp"
                    android:layout_height="@dimen/_8sdp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_online_small" />

            </androidx.cardview.widget.CardView>
        </RelativeLayout>

        <TextView
            android:ellipsize="end"
            android:maxLines="2"
            android:layout_width="@dimen/_64sdp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_4sdp"
            android:fontFamily="@font/nunito_bold"
            android:gravity="center"
            android:text="Lại Bùi Thị Đào Hoa Lê Như Anh"
            android:textSize="@dimen/_10sdp" />

    </LinearLayout>
</layout>